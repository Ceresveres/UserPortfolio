<div class="comment-card">
	<div class="card">
		<div class="card-block">
			<div class="row">
				<div class="col-md-12">
					<div class="comment-content">
						<%= comment.content %>
					</div>
					<div class="comment-timestamp">
						Comment posted by <%= comment.user.first_name %> <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
					</div>
				</div>
			</div>
		</div>
	</div>
</div>