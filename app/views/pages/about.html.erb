<div class="app-card-container">	
	<div class="card border-light">
		<h1>About Me</h1>

		<hr color="white">

		<div class="row">
			<div class="col-4">
				<%= image_tag "Profile.jpg", width: '100%', alt: "Progile Image" %>
			</div>
			<div class="col-8">
				<p class="">A computer science major at Western Washington University. Specializes in Ruby, Rails, Python. </p>
				<div class="skills">
					<% @skills.each do |skill| %>
						<div class="skill">
							<h5><%= skill.title %></h5>
							<div class="progress">
								<div class="progress-bar bg-success"
											 role="progressbar"
											 aria-valuenow="<%= skill.percent_utilized %>"
											 aria-valuemax="100"
											 style="width: <%= skill.percent_utilized %>%"
								></div>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>