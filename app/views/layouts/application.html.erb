<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Muli|Ovo" rel="stylesheet">

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

  <body class="text-center">
    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
      
      <%= video_tag(
        'videos/home_video.m4v',
        id: 'background',
        autoplay: true,
        loop: true,
        muted: true,
        poster: 'home_screen.png',
        playbackRate: 0.00001,
        )
        %>

      <%= render "shared/application_nav" %>

      <%= yield %>

      <%= render "shared/application_footer" %>

      <%= alerts %>      

      <%= source_helper("application") %>
    </div>
  </body>
</html>
